<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">
    <LinearLayout
        android:id="@+id/ll_everyday_ring"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:orientation="horizontal"
        android:paddingRight="@dimen/title_left"
        android:paddingLeft="@dimen/title_left"
        android:layout_marginTop="@dimen/title_top"
        android:gravity="center_vertical"
        android:background="@color/white">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/ring2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="每日记账提醒"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="20:00"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textOn="on"
                android:textOff="off" />
        </LinearLayout>

    </LinearLayout>
    <ListView
        android:id="@+id/tally_detail"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_top"
        android:scrollbars="none"
        android:divider="@null"></ListView>
    <LinearLayout
        android:id="@+id/ll_add_ring"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:orientation="horizontal"
        android:paddingRight="@dimen/title_left"
        android:paddingLeft="@dimen/title_left"
        android:layout_marginTop="@dimen/dp3"
        android:gravity="center_vertical"
        android:background="@color/white">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/add_gray"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="添加记账提醒"/>
    </LinearLayout>


</LinearLayout>
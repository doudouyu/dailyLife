<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/item_search_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/light_gray"
    android:textSize="16dp"
    android:paddingLeft="@dimen/content_left"
    android:padding="@dimen/title_top"
    android:text="时间周期"/>
    <life.bean.com.beanlife.view.MyGridView
        android:id="@+id/gv_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/title_top"
        android:numColumns="3"
        android:listSelector="@android:color/transparent"
        android:background="@color/white"
        android:horizontalSpacing = "@dimen/dp3"
        android:verticalSpacing = "@dimen/dp3"
        ></life.bean.com.beanlife.view.MyGridView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/title_image_size"
        android:layout_height="@dimen/title_image_size"
        android:layout_marginLeft="@dimen/title_left"
        android:layout_centerVertical="true"
        android:src="@mipmap/book1" />

    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/title_left"
        android:layout_toRightOf="@id/iv_icon"
        android:text="定位" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/title_left"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/cb_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可报销" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/title_image_size"
        android:layout_height="@dimen/title_image_size"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/title_left"
        android:layout_centerVertical="true"
        android:src="@mipmap/delete12" />

</RelativeLayout>
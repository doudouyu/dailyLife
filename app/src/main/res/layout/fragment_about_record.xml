<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:bean="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/white">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/login_background" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_icon"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/dp3"
            android:text="版本号：V0.0.0"
            android:textSize="@dimen/dp16" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/title_left"
        android:layout_weight="3"
        android:orientation="vertical">
        <life.bean.com.beanlife.view.MyTextView
            android:id="@+id/ll_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:layout_marginTop="@dimen/dp1"
            android:background="@color/white"
            android:paddingBottom="@dimen/dp3"
            bean:beanText= "隐私政策">
        </life.bean.com.beanlife.view.MyTextView>
        <life.bean.com.beanlife.view.MyTextView
            android:id="@+id/ll_user_agreement"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:layout_marginTop="@dimen/dp1"
            android:background="@color/white"
            android:paddingBottom="@dimen/dp3"
            bean:beanText= "用户协议">
        </life.bean.com.beanlife.view.MyTextView>

    </LinearLayout>
</LinearLayout>
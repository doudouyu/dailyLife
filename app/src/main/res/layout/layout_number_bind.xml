<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <include
        android:id="@id/title_view"
        layout="@layout/layout_title" />

    <EditText
        android:id="@+id/et_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_left"
        android:background="@color/white"
        android:hint="请输入手机号"
        android:padding="@dimen/title_left" />
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/dp1"
       android:background="@color/white">
       <EditText
           android:id="@+id/et_identifying_code"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:hint="请输入验证码"
           android:background="@android:color/transparent"
           android:padding="@dimen/title_left" />
       <TextView
           android:id="@+id/tv_send_identifying_code"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="获取验证码"
           android:layout_alignParentRight="true"
           android:background="@drawable/red_rectangle"
           android:layout_marginRight="@dimen/title_left"
           android:layout_centerVertical="true"
           android:textColor="@color/white"
           android:visibility="gone"
           android:padding="@dimen/title_left" />
   </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/title_left"
        android:layout_marginRight="@dimen/title_left"
        android:layout_marginTop="@dimen/title_left"
        android:background="@drawable/red_rectangle"
        android:gravity="center"
        android:text="@string/complete"
        android:textSize="20dp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/pink">
    <ImageView
        android:id="@id/selected"
        android:layout_width="@dimen/title_image_size"
        android:layout_height="@dimen/title_image_size"
        android:layout_marginLeft="@dimen/title_left"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/category_white"
        />
    <TextView
        android:id="@id/left"
        android:layout_toRightOf="@id/selected"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:layout_marginLeft="@dimen/title_left"
        android:text=""/>
    <TextView
        android:id="@id/center"
        android:layout_toRightOf="@id/left"
        android:layout_marginLeft="@dimen/title_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:text=""
        android:visibility="gone"/>
    <TextView
        android:id="@id/right"
        android:layout_toRightOf="@id/center"
        android:layout_marginLeft="@dimen/title_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:text=""
        android:visibility="gone"/>
    <ImageView
        android:id="@id/iv_search"
        android:layout_marginRight="@dimen/title_left"
        android:layout_width="@dimen/title_image_size"
        android:layout_height="@dimen/title_image_size"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/search"
        android:visibility="gone"/>
</RelativeLayout>



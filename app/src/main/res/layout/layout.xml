<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/get" />

    <RelativeLayout
        android:id="@+id/ll_beijing"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/area_coupon_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="￥100"
                android:textColor="#ff5d52"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/area_coupon_menkan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="满200可用"
                android:textColor="#ff5d52"
                android:textSize="14dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/area_coupon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全品类通用"
                android:textColor="#292929"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/area_coupon_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="2016.12.01-2016.12.31"
                android:textColor="#999999" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="67dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ll_left"
            android:background="#999999" />

        <LinearLayout
            android:id="@+id/area_coupon_use"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/use_text"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="立即领取"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
